# EditorConfig is awesome: https://editorconfig.org

root = true

# Universal settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C++ source files
[*.{cpp,hpp,cc,h,cxx,hxx}]
indent_style = space
indent_size = 4
max_line_length = 120

# CMake files
[CMakeLists.txt,*.cmake]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files (for GitHub workflows)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files (I'm not sure if this is needed)
[*.json]
indent_style = space
indent_size = 2
